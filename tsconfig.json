{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": ["es2015", "es2017", "dom"],
        "moduleResolution": "node",
        "jsx": "preserve",
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "noErrorTruncation": true,
        "paths": {
            "*": ["*", "src/*"]
        }
    },
    "typeAcquisition": {
        "enable": true
    },
    "exclude": ["node_modules", "dist"]
}
